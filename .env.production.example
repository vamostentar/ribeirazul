# ====================================
# Production Environment Variables
# ====================================
# Copy this file to .env.production and fill in the actual values

# ====================================
# Database Configuration
# ====================================
POSTGRES_USER=ribeirazul_prod
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_PASSWORD_URLENC=your_url_encoded_postgres_password
POSTGRES_DB=ribeirazul

# ====================================
# Redis Configuration
# ====================================
REDIS_PASSWORD=your_secure_redis_password
REDIS_PASSWORD_URLENC=your_url_encoded_redis_password

# ====================================
# JWT Configuration
# ====================================
JWT_SECRET=your_very_secure_jwt_secret_key_minimum_32_characters

# ====================================
# CORS Configuration
# ====================================
CORS_ORIGIN=https://www.neodras.com

# ====================================
# API Configuration
# ====================================
API_URL=https://www.neodras.com

# ====================================
# MinIO Configuration
# ====================================
MINIO_ROOT_USER=ribeirazul_minio
MINIO_ROOT_PASSWORD=your_secure_minio_password
S3_ACCESS_KEY_ID=ribeirazul_minio
S3_SECRET_ACCESS_KEY=your_secure_minio_secret_key
S3_BUCKET_NAME=ribeirazul-media

# ====================================
# Rate Limiting (Optional)
# ====================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1m

# ====================================
# Logging (Optional)
# ====================================
LOG_LEVEL=warn

# ===========================================
# Properties Service Environment Variables
# ===========================================

# -------------------------------------------
# Server Configuration
# -------------------------------------------
NODE_ENV=development
PORT=8082
HOST=0.0.0.0

# -------------------------------------------
# Database Configuration
# -------------------------------------------
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/properties_db"

# Database connection pool settings
DB_MAX_CONNECTIONS=10

# -------------------------------------------
# CORS Configuration
# -------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGIN="http://localhost:3001,http://localhost:3000"

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
# Maximum requests per time window
RATE_LIMIT_MAX=100

# Time window for rate limiting
RATE_LIMIT_WINDOW="1 minute"

# -------------------------------------------
# Logging Configuration
# -------------------------------------------
# Log level: fatal, error, warn, info, debug, trace
LOG_LEVEL=info

# -------------------------------------------
# Cache Configuration (Optional)
# -------------------------------------------
# Redis connection string for advanced caching and rate limiting
# REDIS_URL="redis://localhost:6379"

# Cache TTL in seconds
CACHE_TTL=300

# -------------------------------------------
# Authentication (Future Use)
# -------------------------------------------
# JWT secret for token signing
# JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# JWT token expiry
JWT_EXPIRY="24h"

# -------------------------------------------
# Business Rules Configuration
# -------------------------------------------
# Maximum property price (in euros)
MAX_PRICE=100000000

# Maximum property title length
MAX_PROPERTY_TITLE_LENGTH=200

# Maximum property description length
MAX_PROPERTY_DESCRIPTION_LENGTH=2000

# Default properties per page
DEFAULT_PROPERTIES_PER_PAGE=20

# Maximum properties per page
MAX_PROPERTIES_PER_PAGE=100

# -------------------------------------------
# External Services (Future Use)
# -------------------------------------------
# Google Maps API key for geocoding
# GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Email service configuration
# EMAIL_SERVICE_URL="https://api.emailservice.com"
# EMAIL_SERVICE_KEY="your-email-service-key"

# Image storage service
# IMAGE_STORAGE_URL="https://your-image-storage.com"
# IMAGE_STORAGE_KEY="your-storage-key"

# -------------------------------------------
# Monitoring & Analytics (Future Use)
# -------------------------------------------
# Application monitoring
# SENTRY_DSN="https://your-sentry-dsn"

# Analytics service
# ANALYTICS_API_KEY="your-analytics-key"

# -------------------------------------------
# Development Tools
# -------------------------------------------
# Enable Swagger documentation in development
ENABLE_SWAGGER=true

# Enable request/response logging
ENABLE_REQUEST_LOGGING=true

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
{
  "name": "@ribeirazul/user-service",
  "version": "1.0.0",
  "private": true,
  "description": "User Management Microservice for Ribeira Azul Real Estate Platform",
  "author": "Ribeira Azul Development Team",
  "keywords": [
    "user-management",
    "profile",
    "microservice",
    "fastify",
    "prisma",
    "real-estate"
  ],
  "packageManager": "yarn@4.9.2+sha512.1fc009bc09d13cfd0e19efa44cbfc2b9cf6ca61482725eb35bbc5e257e093ebf4130db6dfe15d604ff4b79efd8e1e8e99b25fa7d0a6197c9f9826358d4d65c3c",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:build": "tsc && node dist/server.js",
    "dev:watch": "tsc --watch & nodemon dist/server.js",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset --force",
    "prisma:seed": "tsx prisma/seed.ts",
    "docker:build": "docker build -t user-service .",
    "docker:run": "docker run -p 8086:8086 user-service",
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "prestart": "yarn build",
    "format": "prettier --write \"src/**/*.{ts,json}\""
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/request-context": "^5.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/under-pressure": "^8.3.0",
    "@prisma/client": "^6.15.0",
    "dotenv": "^17.2.1",
    "fastify": "^4.28.1",
    "fastify-type-provider-zod": "^1.1.9",
    "ioredis": "^5.4.1",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.16.5",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.3.3",
    "prisma": "^6.15.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0",
    "yarn": ">=4.0.0"
  },
  "main": "dist/server.js",
  "files": [
    "dist/",
    "prisma/",
    "package.json",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ribeirazul/user-service.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ribeirazul/user-service/issues"
  },
  "homepage": "https://github.com/ribeirazul/user-service#readme"
}

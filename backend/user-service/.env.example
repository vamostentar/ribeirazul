# User Service Configuration

# Server
NODE_ENV=development
PORT=8086
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5436/users

# Redis (optional)
REDIS_URL=redis://redis:6379

# CORS Configuration
# CORS Origins (comma-separated)
# Example: CORS_ORIGINS=https://app.ribeirazul.com,https://admin.ribeirazul.com
CORS_ORIGINS=http://localhost:3001,http://localhost:3000
# CORS Allowed Headers (comma-separated)
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-Request-ID,X-Correlation-ID,X-API-Key

# Content Security Policy (comma-separated values)
CSP_DEFAULT_SRC='self'
CSP_STYLE_SRC='self','unsafe-inline'
CSP_SCRIPT_SRC='self'
CSP_IMG_SRC='self',data:,https:

# System Monitoring (Under Pressure)
MAX_EVENT_LOOP_DELAY=1000
MAX_HEAP_USED_BYTES=1000000000
MAX_RSS_BYTES=1000000000
MAX_EVENT_LOOP_UTILIZATION=0.98
PRESSURE_MESSAGE=Under pressure!
PRESSURE_RETRY_AFTER=50

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# Cache
CACHE_TTL=300

# Logging
LOG_LEVEL=info
ENABLE_DETAILED_LOGGING=true

# Security
TRUST_PROXY=false
HELMET_ENABLED=true

# API Documentation
SWAGGER_ENABLED=true
API_TITLE=Ribeira Azul User Service
API_DESCRIPTION=User Management Microservice for Ribeira Azul Real Estate Platform
API_VERSION=1.0.0
API_CONTACT_NAME=Ribeira Azul Team
API_CONTACT_EMAIL=tech@ribeirazul.com

# Health checks
HEALTH_CHECK_INTERVAL=30000

# Debug
DEBUG_ENABLED=false

# External services
PROPERTIES_SERVICE_URL=http://properties:8082
AUTH_SERVICE_URL=http://auth:8084

# User service specific
MAX_PROFILES_PER_PAGE=50
DEFAULT_PROFILES_PER_PAGE=20
MAX_NOTIFICATIONS_PER_PAGE=100
DEFAULT_NOTIFICATIONS_PER_PAGE=20

# User Preferences Defaults
DEFAULT_EMAIL_NOTIFICATIONS=true
DEFAULT_SMS_NOTIFICATIONS=false
DEFAULT_PUSH_NOTIFICATIONS=true
DEFAULT_PRICE_DROP_ALERTS=true
DEFAULT_NEW_PROPERTY_ALERTS=true
DEFAULT_MARKET_UPDATE_ALERTS=false
DEFAULT_SEARCH_RADIUS=20
DEFAULT_SORT_BY=RELEVANCE
DEFAULT_VIEW_MODE=LIST

# Default Values
DEFAULT_USER_ROLE=CLIENT
DEFAULT_INTEREST_TYPE=VIEWED
DEFAULT_SAVED_PROPERTY_NOTES=

# PRODUCTION EXAMPLE:
# NODE_ENV=production
# LOG_LEVEL=warn
# ENABLE_DETAILED_LOGGING=false
# CORS_ORIGINS=https://app.ribeirazul.com,https://admin.ribeirazul.com
# SWAGGER_ENABLED=false
# DEBUG_ENABLED=false
# MAX_HEAP_USED_BYTES=2000000000
# MAX_RSS_BYTES=2000000000
# DEFAULT_SMS_NOTIFICATIONS=false
# DEFAULT_MARKET_UPDATE_ALERTS=true
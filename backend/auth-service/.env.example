# Node environment
NODE_ENV=development
PORT=8084
HOST=0.0.0.0

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# Database
DATABASE_URL=postgresql://auth_user:auth_pass@localhost:5434/auth_db?schema=public
DB_MAX_CONNECTIONS=20

# Redis (optional, but recommended for production)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=ribeirazul-auth-service
JWT_AUDIENCE=ribeirazul-api

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute
LOGIN_RATE_LIMIT_MAX=5
LOGIN_RATE_LIMIT_WINDOW=15 minutes

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900
LOCKOUT_WINDOW=300
SESSION_TIMEOUT=86400
MAX_CONCURRENT_SESSIONS=5

# Password Hashing (Argon2)
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=4

# Two-Factor Authentication
TOTP_ISSUER=Ribeira Azul
TOTP_WINDOW=2

# Email Configuration (optional)
EMAIL_VERIFICATION_REQUIRED=true
EMAIL_VERIFICATION_EXPIRY=86400
PASSWORD_RESET_EXPIRY=3600
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@ribeirazul.com

# API Documentation
SWAGGER_ENABLED=true
API_TITLE=Ribeira Azul Auth Service
API_VERSION=1.0.0
API_DESCRIPTION=Authentication and Authorization Service for Ribeira Azul Platform

# Default Admin User
SEED_DEFAULT_ADMIN=true
DEFAULT_ADMIN_EMAIL=admin@ribeirazul.com
DEFAULT_ADMIN_PASSWORD=Admin123!

# Logging
LOG_LEVEL=info

# Service URLs (for inter-service communication)
PROPERTIES_SERVICE_URL=http://properties:8083
MEDIA_SERVICE_URL=http://media:8082

# Development/Debug
DEBUG_ENABLED=false


